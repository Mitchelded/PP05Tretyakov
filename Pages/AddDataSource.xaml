<Window x:Class="PP05Tretyakov.Pages.AddDataSource"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PP05Tretyakov.Pages"
        mc:Ignorable="d"
        Title="AddDataSource" Height="150" Width="200" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Data Source"/>
            <TextBox x:Name="TextBoxDataSource"/>
            <Button Content="Ok" Width="50" Margin="10" x:Name="ButtonOk" Click="ButtonOk_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
